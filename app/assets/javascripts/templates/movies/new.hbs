<h2>New Movie</h2>
<form role="form">
  <div class="form-group">
    <label for="name">Name</label>
    {{input type="text" value=name class="form-control" placeholder="Movie Title"}}
  </div>
  <div class="form-group">
    <label for="year">Year</label>
    {{input type="text" value=year class="form-control" placeholder="Release Year"}}
  </div>
  <div class="form-group">
    <label for="image_url">Image Url</label>
    {{input type="text" value=image_url class="form-control" placeholder="image url"}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{textarea value=description cols="120" rows="8"}}
  </div>
  <button type="submit" class="btn btn-default" {{action "submit"}}>Make my movie</button>
  <button type="cancel" class="btn btn-danger" {{action "cancel"}}>F This</button>
</form>
